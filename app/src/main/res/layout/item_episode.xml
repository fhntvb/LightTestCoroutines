<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="@dimen/itemElevation"
    app:cardCornerRadius="@dimen/cardDefaultRoundCorners"
    app:cardBackgroundColor="@android:color/white"
    android:layout_margin="@dimen/defaultMargin"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:padding="@dimen/defaultMargin"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/name"
            android:layout_marginStart="@dimen/defaultMarginDouble"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Name: Pilot"/>
        <TextView
            android:id="@+id/airDate"
            android:layout_marginTop="@dimen/defaultMargin"
            android:layout_marginStart="@dimen/defaultMarginDouble"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Air date: December 2, 2013"/>
        <TextView
            android:id="@+id/episode"
            android:layout_marginTop="@dimen/defaultMargin"
            android:layout_marginStart="@dimen/defaultMarginDouble"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Episode: S01E01"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>