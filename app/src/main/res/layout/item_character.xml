<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="@dimen/itemElevation"
    app:cardCornerRadius="@dimen/cardDefaultRoundCorners"
    app:cardBackgroundColor="@android:color/white"
    android:layout_margin="@dimen/defaultMargin"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/defaultMargin">
        <ImageView
            android:id="@+id/avatar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="140dp"
            android:layout_height="140dp"
            tools:src="@color/colorAccent"/>
        <TextView
            android:id="@+id/name"
            android:layout_marginStart="@dimen/defaultMarginDouble"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/avatar"
            app:layout_constraintTop_toTopOf="@id/avatar"
            tools:text="Name: Bob Marley"/>
        <TextView
            android:id="@+id/status"
            android:layout_marginTop="@dimen/defaultMargin"
            android:layout_marginStart="@dimen/defaultMarginDouble"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/avatar"
            app:layout_constraintTop_toBottomOf="@id/name"
            tools:text="Status: Alive"/>
        <TextView
            android:id="@+id/species"
            android:layout_marginTop="@dimen/defaultMargin"
            android:layout_marginStart="@dimen/defaultMarginDouble"
            app:layout_constraintStart_toEndOf="@id/avatar"
            app:layout_constraintTop_toBottomOf="@id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Species: Human"/>
        <TextView
            android:id="@+id/gender"
            android:layout_marginTop="@dimen/defaultMargin"
            android:layout_marginStart="@dimen/defaultMarginDouble"
            app:layout_constraintStart_toEndOf="@id/avatar"
            app:layout_constraintTop_toBottomOf="@id/species"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Gender: Male"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>